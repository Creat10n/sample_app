<% provide(:title, t(".signup.title")) %>
<h1><%= t ".signup.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t(".signup.form.name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t(".signup.form.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t(".signup.form.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t(".signup.form.confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t(".signup.form.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
